<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_weight="3">

        <TextView
            android:id="@+id/workingtext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/resulttext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textSize="45sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="clearonClick"

                android:text="C"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="bracketonclick"
                android:text="()"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="poweronClick"
                android:text="^"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="divideClick"
                android:text="/"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="sevenonClick"
                android:text="7"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="eightonClick"
                android:text="8"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="nineonClick"
                android:text="9"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="multipleonClick"
                android:text="X"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="fouronClick"
                android:text="4"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="fiveonClick"
                android:text="5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="sixonClick"
                android:text="6"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="subonClick"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="oneonClick"
                android:text="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="twoonClick"
                android:text="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="threeonClick"
                android:text="3"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="addonClick"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="pointonClick"
                android:text="."/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:onClick="zeroonClick"
                android:text="0"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:textSize="70sp"
                android:textColor="#FF7F50"
                android:backgroundTint="@color/black"
                android:onClick="equalonClick"
                android:text="="/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>